{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@horizon/shared": [
        "shared/src/index.ts"
      ],
      "@horizon/shared/*": [
        "shared/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}

